---
import '../styles/global.css';

import slide1 from '../assets/slide-1.png';
import slide2 from '../assets/slide-2.png';
import slide3 from '../assets/slide-3.png';
import slide4 from '../assets/slide-4.png';
import slide5 from '../assets/slide-5.png';
import rectangle2 from '../assets/rectangle2.png';
import rectangle3 from '../assets/rectangle3.png';
import rectangle4 from '../assets/rectangle4.png';
import rectangle5 from '../assets/rectangle5.png';
import rectangle6 from '../assets/rectangle6.png';
import rectangle7 from '../assets/rectangle7.png';
import desktop1 from '../assets/desktop1.jpeg';
import globe from '../assets/globe.svg';
import heic0604a from '../assets/heic0604a.png';
import becky from '../assets/testimonial/becky.png';
import akronymLogoBlanco from '../assets/AkronymLogoBlanco.png';
import victorurzola from '../assets/logos/victorurzola.png';
import adastra from '../assets/logos/adastra.png';
import wc from '../assets/logos/wc.png';
import pbs from '../assets/logos/pbs.png';
import experience from '../assets/logos/experience.png';
import acp from '../assets/logos/acp.png';
import k from '../assets/logos/k.png';
import mg from '../assets/logos/mg.png';
import trmi from '../assets/logos/trmi.png';
import triad from '../assets/logos/triad.png';
import bars from '../assets/logos/bars.png';
import lelevier from '../assets/logos/lelevier.png';
import ulb from '../assets/logos/ulb.png';
import risingunited from '../assets/logos/risingunited.png';
import terre from '../assets/logos/terre.png';
import imago from '../assets/logos/imago.png';
---

<!-- Sección de logo Akronym centrado pantalla completa -->
<section class="w-screen h-screen min-h-[400px] bg-black flex flex-col items-center justify-center">
  <img src={akronymLogoBlanco.src} alt="Akronym Logo" class="fade-in w-48 sm:w-64 md:w-80 lg:w-[30rem] max-w-[80vw] mb-6" />
</section>

<!-- Navbar -->
<nav id="main-navbar" class="absolute top-0 left-0 w-full flex flex-col md:flex-row items-start justify-between px-4 sm:px-8 md:px-16 py-4 md:py-6 z-20">
  <div class="flex-1 flex items-start justify-start mb-2 md:mb-0">
    <img src={akronymLogoBlanco.src} alt="Akronym Logo" class="w-30" />
  </div>
  <div class="flex items-start justify-between gap-2 md:gap-5">
    <div>
      <a href="#sobre-nosotros" class="text-neutral-100 text-sm md:text-base font-normal tracking-wider text-center leading-tight hover:opacity-70 transition-opacity">SOBRE NOSOTROS</a><br>
    </div>
    <div>
      <a href="#contacto" class="text-neutral-100 text-sm md:text-base font-normal tracking-wider hover:opacity-70 transition-opacity">CONTACTO</a>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<div class="relative w-screen h-screen min-h-[400px] font-sans" style={`background: url('${desktop1.src}') center center/cover no-repeat;`}>
  <div class="absolute inset-0 bg-black/10 z-10"></div>
  <section class="absolute left-0 bottom-0 z-20 text-neutral-100 max-w-full md:max-w-[60vw] p-4 sm:p-8 md:p-16">
    <div class="fade-in text-2xl sm:text-3xl md:text-5xl leading-tight mb-4 md:mb-6 tracking-wider">
      LA MAYORÍA DIGITALIZA <br />PROCESOS. NOSOTROS <br />TRANSFORMAMOS NEGOCIOS.
    </div>
    <div class="fade-in text-base sm:text-lg md:text-xl mt-2 md:mt-4 text-neutral-100 opacity-95 tracking-wider">
      Las herramientas sobran.<br />
      Lo que falta es dirección.
    </div>
  </section>
</div>

<!-- Nueva sección: MÁS CLARO -->
<section class="w-full min-h-[40vh] sm:min-h-[60vh] bg-black flex flex-col items-center justify-center py-12 sm:py-24 px-2">
  <h2 class="fade-in text-4xl sm:text-6xl md:text-8xl lg:text-9xl font-normal text-neutral-100 mb-4 sm:mb-8 tracking-wide text-center">MÁS CLARO</h2>
  <p class="fade-in text-base sm:text-xl md:text-2xl text-neutral-300 mb-6 sm:mb-10 text-center">con lo que realmente querés lograr.</p>
  <div class="relative flex flex-col items-center">
    <button
      onclick="window.location.href = '/form'"
      class="relative w-[350px] md:w-[420px] h-14 border border-neutral-300 rounded-full flex items-center justify-center bg-transparent text-neutral-100 text-lg font-normal transition hover:bg-white hover:text-[#191B1C]">
      Transformá tu negocio ahora
      <span class="ml-3 text-2xl">→</span>
    </button>
  </div>
</section>

<!-- Nueva sección: TECNOLOGÍA QUE SIRVE -->
<section class="w-full min-h-[80vh] bg-black flex flex-col items-center justify-center py-24">
  <h2 class="fade-in text-3xl md:text-3xl lg:text-4xl font-normal text-neutral-100 mb-16 tracking-wide text-center max-w-4xl">
    TECNOLOGÍA QUE SIRVE. CON PROPÓSITO
  </h2>
  <div class="mb-16">
    <svg width="48" height="64" viewBox="0 0 48 64" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M24 16V48" stroke="#E5E5E5" stroke-width="2" stroke-linecap="round"/>
      <path d="M16 40L24 48L32 40" stroke="#E5E5E5" stroke-width="2" stroke-linecap="round"/>
    </svg>
  </div>
  <div class="fade-in text-xl md:text-2xl text-neutral-100 uppercase text-center mb-14 max-w-5xl px-4">
    LO PENSAMOS CON ESTRATEGIA, LO DISEÑAMOS CON INTENCION Y LO MEJORAMOS CONSTANTEMENTE. ASÍ DE SIMPLE.
  </div>
  <button class="relative w-[350px] md:w-[420px] h-14 border border-neutral-300 rounded-full flex items-center justify-center bg-transparent text-neutral-100 text-lg font-normal transition hover:bg-white hover:text-[#191B1C]">
    Transformá tu negocio ahora
    <span class="ml-3 text-2xl">→</span>
  </button>
</section>

<!-- Nueva sección: NACIMOS EN COSTA RICA -->
<section class="w-full min-h-[100vh] flex flex-col items-center justify-center relative overflow-hidden bg-linear-to-t from-[#0d0d11] to-[#191B1C]">
  <img src={globe.src} alt="Globe background" class="absolute w-full h-full object-cover opacity-20" />
  <div class="relative z-10 flex flex-col justify-between items-center w-full h-full py-25">
    <div class="text-center mb-20 md:mb-180">
      <h2 class="fade-in text-2xl md:text-5xl font-normal text-neutral-100 mb-8 text-center drop-shadow-lg">NACIMOS EN COSTA RICA.</h2>
      <p class="fade-in text-base md:text-2xl text-neutral-100 text-center max-w-4xl uppercase tracking-wide drop-shadow-lg">
        PERO NUESTRA FORMA DE TRABAJAR NO TIENE GEOGRAFÍA:<br>
        TIENE INTENCIÓN, DIRECCIÓN Y COMPROMISO REAL.
      </p>
    </div>

    <div class="text-center flex flex-col items-center">
      <h3 class="fade-in text-2xl md:text-4xl font-normal text-neutral-100 uppercase tracking-wide drop-shadow-lg">SI QUERÉS QUE TU NEGOCIO<br>EVOLUCIONE EN SERIO, ACÁ ES.</h3>
      <div class="my-20 fade-in">
        <img src={akronymLogoBlanco.src} alt="Akronym Logo" class="h-10 md:h-20 mb-2 drop-shadow-lg" />
      </div>
      <p class="fade-in text-base md:text-2xl text-neutral-100 mb-20 text-center max-w-2xl drop-shadow-lg">
        LOS ACRÓNIMOS RESUMEN LO ESENCIAL.<br>
        AKRONYM LO TRANSFORMA EN MOVIMIENTO REAL.
      </p>
      <button class="relative w-[350px] md:w-[420px] h-14 border border-neutral-300 rounded-full flex items-center justify-center bg-transparent text-neutral-100 text-lg font-normal transition hover:bg-white hover:text-[#191B1C] shadow-lg">
        Transformá tu negocio ahora
        <span class="ml-3 text-2xl">→</span>
      </button>
    </div>
  </div>
</section>

<!-- Nueva sección: TRANSFORMAR NO ES UNA PROMESA -->
<section class="w-full bg-neutral-100 py-20 flex flex-col items-center justify-center">
  <h2 class="fade-in text-4xl md:text-6xl font-normal text-neutral-900 mb-15 text-center max-w-7xl">
    TRANSFORMAR NO ES UNA PROMESA.<br />ES UNA FORMA DE TRABAJAR.
  </h2>
  <!-- Carousel Slick -->
  <div class="w-full max-w-7xl mb-12 px-2">
    <div class="slick-slider">
      <div class="px-3"><img src={slide1.src} alt="slide1" class="object-cover w-full h-[350px] md:h-[420px]" /></div>
      <div class="px-3"><img src={slide2.src} alt="slide2" class="object-cover w-full h-[350px] md:h-[420px]" /></div>
      <div class="px-3"><img src={slide3.src} alt="slide3" class="object-cover w-full h-[350px] md:h-[420px]" /></div>
      <div class="px-3"><img src={slide4.src} alt="slide4" class="object-cover w-full h-[350px] md:h-[420px]" /></div>
      <div class="px-3"><img src={slide5.src} alt="slide5" class="object-cover w-full h-[350px] md:h-[420px]" /></div>
    </div>
  </div>
  <p class="fade-in text-lg text-neutral-900 mb-8 text-center max-w-5xl">
    Acompañamos negocios que están listos para cuestionar  cómo vienen haciendo las cosas.
  </p>
  <p class="fade-in text-lg text-neutral-900 mb-10 text-center max-w-5xl">
    Que no buscan soluciones rápidas, sino evolución real. Trabajamos para generar impacto que se siente en los números, en las decisiones, y en la forma en que el negocio vuelve a moverse.
  </p>
  <button class="relative w-[350px] md:w-[420px] h-14 border border-neutral-400 rounded-full flex items-center justify-center bg-transparent text-neutral-900 text-lg font-normal transition hover:bg-white hover:text-[#191B1C]">
    Transformá tu negocio ahora
    <span class="ml-3 text-2xl">→</span>
  </button>
</section>

<!-- Nueva sección: CREEN EN NEGOCIOS QUE PIENSAN DISTINTO -->
<section class="w-full min-h-[70vh] bg-black flex flex-col items-center justify-center py-24">
  <h2 class="fade-in text-3xl md:text-5xl font-normal text-neutral-100 mb-10 text-center max-w-7xl">
    CREEMOS EN NEGOCIOS QUE PIENSAN DISTINTO.<br />Y QUE SE ANIMAN A ACTUAR DISTINTO.
  </h2>
  <div class="fade-in text-2xl md:text-3xl text-neutral-100 uppercase text-center mb-8 max-w-7xl px-4">
    NEGOCIOS QUE NO NECESITAN MÁS HERRAMIENTAS,<br />SINO DIRECCIÓN, CRITERIO Y TECNOLOGÍA APLICADA CON INTENCIÓN.
  </div>
  <div class="fade-in text-2xl md:text-3xl text-neutral-100 text-center mb-12 max-w-7xl px-4">
    QUEREMOS ESTAR AHÍ: CUANDO TODO SE REORDENA,<br />CUANDO LO IMPORTANTE VUELVE A TENER FOCO,<br />Y EL NEGOCIO AVANZA CON SENTIDO.
  </div>
  <button class="relative w-[350px] md:w-[420px] h-14 border border-neutral-300 rounded-full flex items-center justify-center bg-transparent text-neutral-100 text-lg font-normal transition hover:bg-white hover:text-[#191B1C]">
    Transformá tu negocio ahora
    <span class="ml-3 text-2xl">→</span>
  </button>
</section>

<!-- Nueva sección: LO QUE HACEMOS -->
<section class="w-full min-h-[80vh] bg-black flex flex-col items-center justify-center py-24 relative overflow-hidden">
  <!-- Esquinas decorativas con flechas largas y delgadas -->
  <!-- Esquina superior izquierda (↖) -->
  <svg class="absolute top-4 left-4 w-28 h-28 text-neutral-400 opacity-60" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 56 56">
    <line x1="28" y1="28" x2="4" y2="4" />
    <polyline points="25,4 4,4 4,25" />
  </svg>
  <!-- Esquina superior derecha (↗) -->
  <svg class="absolute top-4 right-4 w-28 h-28 text-neutral-400 opacity-60" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 56 56">
    <line x1="28" y1="28" x2="52" y2="4" />
    <polyline points="27,4 52,4 52,25" />
  </svg>
  <!-- Esquina inferior izquierda (↙) -->
  <svg class="absolute bottom-4 left-4 w-28 h-28 text-neutral-400 opacity-60" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 56 56">
    <line x1="28" y1="28" x2="4" y2="52" />
    <polyline points="4,34 4,52 22,52" />
  </svg>
  <!-- Esquina inferior derecha (↘) -->
  <svg class="absolute bottom-4 right-4 w-28 h-28 text-neutral-400 opacity-60" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 56 56">
    <line x1="28" y1="28" x2="52" y2="52" />
    <polyline points="52,32 52,52 32,52" />
  </svg>

  <h2 class="fade-in text-[10vw] md:text-9xl font-normal text-neutral-100 mb-6 text-center leading-tight">LO QUE<br>HACEMOS</h2>
  <div class="fade-in text-lg md:text-2xl text-neutral-100 uppercase text-center mb-6 max-w-6xl px-4 tracking-wide">
    NO HACEMOS TAREAS. HACEMOS QUE LAS COSAS FUNCIONEN.
  </div>
  <div class="fade-in text-base md:text-xl text-neutral-300 text-center mb-10 max-w-7xl px-4">
    Trabajamos con negocios que quieren dejar de adivinar, y empezar a operar con claridad, foco y dirección real.
  </div>
  <button class="relative w-[350px] md:w-[420px] h-14 border border-neutral-300 rounded-full flex items-center justify-center bg-transparent text-neutral-100 text-lg font-normal transition hover:bg-white hover:text-[#191B1C]">
    Transformá tu negocio ahora
    <span class="ml-3 text-2xl">→</span>
  </button>
</section>

<!-- Nueva sección: GRID DE TEXTO E IMÁGENES ALTERNADOS -->
<section class="w-full bg-black py-24 flex flex-col items-center justify-center">
  <div class="max-w-7xl w-full flex flex-col px-4">
    <!-- Fila 1: texto - imagen -->
    <div class="flex flex-col md:flex-row items-start md:items-end mb-5 md:mb-0">
      <div class="flex-1 text-left text-neutral-100 pb-5">
        <h3 class="fade-in text-2xl md:text-5xl mb-4">TRANSFORMACION QUE SE NOTA</h3>
        <p class="fade-in text-lg md:text-xl opacity-80">Replanteamos cómo tu negocio opera en lo digital. <br> Desde los procesos hasta las herramientas: lo rediseñamos todo para que funcione mejor, con menos fricción y más resultados.</p>
      </div>
      <div class="flex-1">
        <img src={rectangle2.src} alt="Dirección que transforma" class="w-full object-cover rounded" />
      </div>
    </div>
    
    <!-- Fila 2: imagen - texto -->
    <div class="flex flex-col md:flex-row items-start md:items-end mb-5 md:mb-0">
      <div class="flex-1 order-2 md:order-1">
        <img src={rectangle3.src} alt="Experiencia de usuario" class="w-full object-cover rounded" />
      </div>
      <div class="flex-1 order-1 md:order-2 text-left text-neutral-100 pb-5">
        <h3 class="fade-in text-2xl md:text-5xl mb-4 md:pl-5">EXPERIENCIA DE USUARIO (UX/UI)</h3>
        <p class="fade-in text-lg md:text-xl opacity-80 md:pl-5">Diseñamos interfaces simples, intuitivas y efectivas.<br>Para que tus usuarios entiendan, usen y disfruten tu producto. Más claridad. Más conversiones.</p>
      </div>
    </div>

    <!-- Fila 3: texto - imagen -->
    <div class="flex flex-col md:flex-row items-start md:items-end mb-5 md:mb-0">
      <div class="flex-1 text-left text-neutral-100 pb-5">
        <h3 class="fade-in text-2xl md:text-5xl mb-4 md:pr-5">PROCESOS QUE ESCALAN</h3>
        <p class="fade-in text-lg md:text-xl opacity-80">Menos pasos. Menos esfuerzo. Más impacto.<br>Diseñamos automatizaciones inteligentes que simplifican tu operación y hacen que todo funcione con menos fricción.</p>
      </div>
      <div class="flex-1">
        <img src={rectangle4.src} alt="Procesos sin fricción" class="w-full object-cover rounded" />
      </div>
    </div>

    <!-- Fila 4: imagen - texto -->
    <div class="flex flex-col md:flex-row items-start md:items-end mb-5 md:mb-0">
      <div class="flex-1 order-2 md:order-1">
        <img src={rectangle5.src} alt="Tecnología que impulsa" class="w-full object-cover rounded" />
      </div>
      <div class="flex-1 order-1 md:order-2 text-left text-neutral-100 pb-5">
        <h3 class="fade-in text-2xl md:text-5xl mb-4 md:pl-5">ESTRATEGIA BASADA EN DATOS</h3>
        <p class="fade-in text-lg md:text-xl opacity-80 md:pl-5">Convertimos tus métricas en decisiones.<br>Creamos estructuras de datos claras, visuales y accionables, para que sepas qué está funcionando, qué no, y hacia dónde ir.</p>
      </div>
    </div>

    <!-- Fila 5: texto - imagen -->
    <div class="flex flex-col md:flex-row items-start md:items-end mb-5 md:mb-0">
      <div class="flex-1 text-left text-neutral-100 pb-5">
        <h3 class="fade-in text-2xl md:text-5xl mb-4">LA ENTREGA NO ES EL FINAL. ES CUANDO EMPIEZA LO BUENO</h3>
        <p class="fade-in text-lg md:text-xl opacity-80">Ahí es donde aparecemos.<br>Donde otros se van, nosotros nos quedamos.</p>
      </div>
      <div class="flex-1">
        <img src={rectangle6.src} alt="--" class="w-full object-cover rounded" />
      </div>
    </div>
  </div>
</section>

<!-- Nueva sección: TESTIMONIOS -->
<section class="w-full bg-black py-24 flex flex-col items-center justify-center">
  <div class="max-w-7xl w-full flex flex-col md:flex-row gap-12 px-4">
    <!-- Columna izquierda: imagen y testimonio -->
    <div class="flex-1 flex flex-col items-center md:items-start">
      <div class="testimonial-content">
        <img id="testimonial-image" src={becky.src} alt="Becky Vannes" class="w-90 h-90 object-cover rounded mb-8" />
        <div id="testimonial-position" class="text-neutral-400 text-sm mb-4">Productions Manager at ACP Publishing</div>
        <p id="testimonial-text" class="fade-in text-neutral-100 text-base md:text-lg max-w-xs">
          Thanks to Akronym's expertise and dedication, our online presence has flourished, and our sales of self-help books have soared. We wholeheartedly recommend Akronym to anyone looking for top-notch website development services. They are a true asset to our business!
        </p>
      </div>
    </div>
    <!-- Columna derecha: nombres y descripciones -->
    <div class="flex-1 flex flex-col justify-start text-center md:text-left">
      <div class="testimonial-name mb-8" data-testimonial="becky">
        <h4 class="fade-in text-4xl md:text-5xl font-medium text-neutral-600 leading-tight">BECKY<br>VANNES</h4>
        <div class="fade-in text-neutral-500 text-sm mt-1">Productions Manager at ACP Publishing</div>
      </div>
      <div class="testimonial-name mb-8" data-testimonial="david">
        <h4 class="fade-in text-4xl md:text-5xl font-medium text-neutral-600 leading-tight">DR. DAVID<br>KUBES</h4>
        <div class="fade-in text-neutral-500 text-sm mt-1">International Lawyer</div>
      </div>
      <div class="testimonial-name mb-8" data-testimonial="michael">
        <h4 class="fade-in text-4xl md:text-5xl font-medium text-neutral-600 leading-tight">MICHAEL<br>SHANER</h4>
        <div class="fade-in text-neutral-500 text-sm mt-1">CEO of The Flow Group & President of Shantou Media</div>
      </div>
      <div class="testimonial-name mb-8" data-testimonial="fatou">
        <h4 class="fade-in text-4xl md:text-5xl font-medium text-neutral-600 leading-tight">FATOU<br>SOW</h4>
        <div class="fade-in text-neutral-500 text-sm mt-1">President of Slingshots Music and Managing Director of Shantou Media</div>
      </div>
      <div class="testimonial-name mb-8" data-testimonial="marilis">
        <h4 class="fade-in text-5xl md:text-6xl leading-tight text-neutral-600">MARILIS<br>LLOBET</h4>
        <div class="fade-in text-neutral-600 text-base mt-2">CEO of Ventas Cognitivas</div>
      </div>
    </div>
  </div>
</section>

<!-- Nueva sección: ALIADOS (antes del footer) -->
<section class="w-full bg-black py-20 flex flex-col items-center justify-center">
  <h2 class="fade-in text-3xl md:text-5xl font-normal text-neutral-100 mb-12 text-center tracking-wide">ALGUNOS DE NUESTROS ALIADOS...</h2>
  <div class="w-full max-w-5xl mb-12 px-2">
    <div class="slick-slider aliados-carousel flex items-center">
      <div class="px-6"><img src={victorurzola.src} alt="Dr. Victor Urzola" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={adastra.src} alt="Ad Astra" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={wc.src} alt="Wagner & Carter" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={pbs.src} alt="PBS" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={experience.src} alt="Experience Papagayo" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={acp.src} alt="ACP" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={k.src} alt="K" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={mg.src} alt="MG" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={trmi.src} alt="TRMI" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={triad.src} alt="Triad" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={bars.src} alt="Bars" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={lelevier.src} alt="Lelevier" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={ulb.src} alt="ULB" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={risingunited.src} alt="Rising United" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={terre.src} alt="Terre" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
      <div class="px-6"><img src={imago.src} alt="Imago" class="h-20 md:h-24 object-contain grayscale opacity-80 mx-auto" /></div>
